@model TesteProva.Livraria.Models.Livros

@{
    ViewBag.Title = "ExcluirLivro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">
        @TempData["Msg"]
    </div>
}

<div class="modal-dialog" style="margin-top:10%;width:50%">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span><span class="sr-only">Close</span>
            </button>
           
        </div>
       
        <div class="modal-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <label>Realmente deseja excluir este livro?</label>
                    <input type="submit" value="SIM" class="btn btn-danger" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">NÂO</button>
                </div>
            }
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->


