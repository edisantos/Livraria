@model TesteProva.Livraria.Models.Livros
@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br /><br />
    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success">
            @TempData["Msg"]
        </div>
    }
    @*@if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }*@

    <div class="Formulario">
        <h3 style="text-align:center">Registro de novos livros</h3>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken();
            <div class="form-horizontal">
                <div class="form-group">
                    <label>Titulo</label>
                    @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control", placeholder = "Titulo", required = "required" })
                </div>
                <div class="form-group">
                    <label>Autor</label>
                    @Html.TextBoxFor(model => model.Autor, new { @class = "form-control", placeholder = "Autor", required = "required" })
                </div>
                <div class="form-group">
                    <label>Ano</label>
                    @Html.TextBoxFor(model => model.Ano, new { @class = "form-control", placeholder = "Ano", required = "required" })
                </div>
                <div class="form-group">
                    <label>Exemplar</label>
                    @Html.TextBoxFor(model => model.ExemplarNumero, new { @class = "form-control", placeholder = "Exemplar", required = "required" })
                </div>
                <div class="form-group">
                    <label>Preço</label>
                    @Html.TextBoxFor(model => model.Preco, new { @class = "form-control", placeholder = "Preço", required = "required" })
                </div>
                <div class="form-group">
                    <label>Categoria</label>
                    @Html.DropDownList("CategoriaId", null, htmlAttributes: new { @class = "form-control" }, optionLabel: "SELECIONE")
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-floppy-saved"> Registrar</span>
                    </button>
                </div>
            </div>
        }
    </div>
</div>
<!--Modal alerta-->
<div class="modal fade" tabindex="-1" role="dialog" id="AlertaModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Alerta</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@section scripts{
    <script>
    $(function () {
        if ('@TempData["Error"]' != "") {
            $('#AlertaModal').modal('show')
        }

    })
    </script>
}